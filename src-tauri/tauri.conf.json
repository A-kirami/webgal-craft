{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "webgal-craft",
  "version": "../package.json",
  "identifier": "com.akirami.webgal-craft",
  "build": {
    "beforeDevCommand": "bun dev:web",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun build:web",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://github.com/A-kirami/webgal-craft/releases/latest/download/latest.json"],
      "pubkey": ""
    }
  }
}
